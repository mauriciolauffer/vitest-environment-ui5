{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src",
    "checkJs": true,
    "allowJs": true,
    "types": ["node", "jsdom", "openui5"],
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "test"]
}
